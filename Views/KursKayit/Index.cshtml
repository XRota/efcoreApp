@model IEnumerable<KursKayit>

<h2 class="mb-3">Kurs Kayıtları</h2>
<p>Öğrencilerimizi mevcut kurslara kayıt yapabilirsiniz.</p>
<a asp-conroller="KursKayit" asp-action="Create" class="btn btn-primary btn-sm">Yeni Kayıt</a>
<hr>
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m =>m.KursKayitId) </th>
            <th>@Html.DisplayNameFor(m =>m.Ogrenci.OgrenciId) </th>
            <th>@Html.DisplayNameFor(m =>m.Kurs.Baslik) </th>
            <th style="width: 150px;"></th>


        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.KursKayitId)</td>
                <td>@Html.DisplayFor(modelItem => item.Ogrenci.AdSoyad)</td>
                <td>@Html.DisplayFor(modelItem => item.Kurs.Baslik)</td>
                <td>
                    <a asp-controller="Kurs" asp-action="Edit" asp-route-id="@item.KursId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.KursId" class="btn btn-sm btn-danger">Delete</a>
                </td>


            </tr>
        }
    </tbody>
</table>
