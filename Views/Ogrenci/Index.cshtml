@model IEnumerable<Ogrenci>

    <h2 class="mb-3">Öğrecilerimiz</h2>
    <a asp-conroller="Ogrenci" asp-action="Create" class="btn btn-primary btn-sm">Yeni Öğrenci Ekle</a>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <!-- DisplayNameFor Listenin adını alırken kullanıyor -->
                <th style="width: 150px; ">@Html.DisplayNameFor(m => m.OgrenciId)</th> 
                <th>@Html.DisplayNameFor(m => m.OgrenciAd)</th>
                <th style="width: 150px; ">@Html.DisplayNameFor(m => m.OgrenciSoyad)</th>
            </tr>
        </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <!-- DisplayFor Listenin İçeriğini almak için kullanıyor -->
            <td>@Html.DisplayFor(modelItem => item.OgrenciId)</td>
            <td>@Html.DisplayFor(modelItem => item.OgrenciAd)</td>
            <td>@Html.DisplayFor(modelItem => item.OgrenciSoyad)</td>
            <td>
                <a asp-controller="Ogrenci" asp-action="Edit" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-danger">Delete</a>
            </td>

        </tr>
        }

    </tbody>
</table>